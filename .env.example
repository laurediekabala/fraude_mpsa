# Configuration Environment Variables
# Copier ce fichier à .env et adapter selon votre environnement

# ═══════════════════════════════════════════════════════════════
# FLASK API Configuration
# ═══════════════════════════════════════════════════════════════

FLASK_ENV=production
FLASK_DEBUG=0
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# API Port
API_PORT=5000
API_HOST=0.0.0.0

# ═══════════════════════════════════════════════════════════════
# Streamlit Configuration
# ═══════════════════════════════════════════════════════════════

STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_CLIENT_TOOLBAR_MODE=viewer

# ═══════════════════════════════════════════════════════════════
# Model Configuration
# ═══════════════════════════════════════════════════════════════

MODEL_PATH=api_flask/model_xboost.joblib
SHAP_PATH=api_flask/shap.joblib
CONFIG_PATH=api_flask/config/business.yaml

# ═══════════════════════════════════════════════════════════════
# Drift Detection
# ═══════════════════════════════════════════════════════════════

DRIFT_BASELINE_PATH=api_flask/drift_baseline.json
DRIFT_THRESHOLD=0.05
DRIFT_CHECK_ENABLED=true

# ═══════════════════════════════════════════════════════════════
# Database (si utilisé)
# ═══════════════════════════════════════════════════════════════

DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=fraude_detection

# ═══════════════════════════════════════════════════════════════
# Logging
# ═══════════════════════════════════════════════════════════════

LOG_LEVEL=INFO
LOG_FORMAT=json

# ═══════════════════════════════════════════════════════════════
# Monitoring (Prometheus)
# ═══════════════════════════════════════════════════════════════

PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# ═══════════════════════════════════════════════════════════════
# Security
# ═══════════════════════════════════════════════════════════════

SECRET_KEY=your-secret-key-here-change-in-production
API_KEY=your-api-key-here
CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# ═══════════════════════════════════════════════════════════════
# Docker Compose
# ═══════════════════════════════════════════════════════════════

COMPOSE_PROJECT_NAME=fraude_mpsa
COMPOSE_FILE=docker-compose.yml

# ═══════════════════════════════════════════════════════════════
# Development/Production
# ═══════════════════════════════════════════════════════════════

ENVIRONMENT=development
# ENVIRONMENT=production

# ═══════════════════════════════════════════════════════════════
# Optimization
# ═══════════════════════════════════════════════════════════════

WORKER_THREADS=4
MAX_UPLOAD_SIZE_MB=2048
CACHE_TTL_SECONDS=3600
